<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <a href="/blogs/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>
    {{blog.content}}
    </p>
    <p>Posted by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
</div>
{{/each}}